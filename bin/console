#!/usr/bin/env ruby
# frozen_string_literal: true

require 'bundler/setup'
require 'debug'
require 'pg_eventstore'
require 'logger'
require 'niceql'

PgEventstore.configure do |config|
  config.pg_uri = ENV.fetch('PG_EVENTSTORE_URI', 'postgresql://postgres:postgres@localhost:6432/eventstore')
  config.connection_pool_size = 20
end

logger = Logger.new($stdout)
logger.level = :debug
logger.formatter = proc do |_severity, _time, _progname, msg|
  "#{Niceql::Prettifier.prettify_sql(msg)}\n"
end
PgEventstore.logger = logger

# You can add fixtures and/or initialization code here to make experimenting
# with your gem easier. You can also use a different console, if you like.

require 'irb'
IRB.start(__FILE__)
